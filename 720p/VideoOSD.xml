<window id="2901">
	<defaultcontrol always="true">410</defaultcontrol>

	<controls>

		<control type="button" id="410">
			<onfocus>Dialog.Close(fullscreeninfo)</onfocus>
			<onfocus>SetFocus(4)</onfocus>
		</control>

		<control type="button" id="411">
			<onfocus>Dialog.Close(videoosd)</onfocus>
		</control>

		<control type="group">

			<visible>![Window.IsVisible(sliderdialog) | Window.IsVisible(videobookmarks)]</visible>

			<include>Animation_SlideDownFadeOut</include>

			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>1280</width>
				<height>60</height>
				<texture>osd/osdback.png</texture>
			</control>

			<control type="group">
				<posx>30</posx>
				<posy>10</posy>
				<control type="label">
					<width>150</width>
					<height>40</height>
					<aligny>center</aligny>
					<font>Font_OSDTime</font>
					<textcolor>OSDTime</textcolor>
					<label>$INFO[System.Time(hh:mm)] $LOCALIZE[40155]</label>
					<visible>substring(system.time,AM,right)</visible>
				</control>
				<control type="label">
					<width>150</width>
					<height>40</height>
					<aligny>center</aligny>
					<font>Font_OSDTime</font>
					<textcolor>OSDTime</textcolor>
					<label>$INFO[System.Time(hh:mm)] $LOCALIZE[40156]</label>
					<visible>substring(system.time,PM,right)</visible>
				</control>
				<control type="label">
					<width>150</width>
					<height>40</height>
					<aligny>center</aligny>
					<font>Font_OSDTime</font>
					<textcolor>OSDTime</textcolor>
					<info>System.Time(hh:mm)</info>
					<visible>![substring(system.time,PM,right) | substring(system.time,AM,right)]</visible>
				</control>
			</control>

			<control type="fadelabel">
				<posx>200</posx>
				<posy>10</posy>
				<width>880</width>
				<height>40</height>
				<font>Font_OSDTitle</font>
				<textcolor>OSDTitle</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>3800</pauseatend>
				<scrollspeed>40</scrollspeed>
				<scroll>true</scroll>
				<label>$INFO[VideoPlayer.TVShowTitle,, - ]$INFO[VideoPlayer.Title]</label>
				<visible>!StringCompare(VideoPlayer.TVShowTitle,VideoPlayer.Title)</visible>
			</control>

			<control type="fadelabel">
				<posx>200</posx>
				<posy>10</posy>
				<width>880</width>
				<height>40</height>
				<font>Font_OSDTitle</font>
				<textcolor>OSDTitle</textcolor>
				<align>center</align>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>3800</pauseatend>
				<scrollspeed>40</scrollspeed>
				<scroll>true</scroll>
				<label>$INFO[VideoPlayer.Title]</label>
				<visible>IsEmpty(VideoPlayer.TVShowTitle) | StringCompare(VideoPlayer.TVShowTitle,VideoPlayer.Title)</visible>
			</control>

			<control type="label">
				<posx>1250</posx>
				<posy>10</posy>
				<width>150</width>
				<height>40</height>
				<aligny>center</aligny>
				<align>right</align>
				<font>Font_OSDTime</font>
				<textcolor>OSDTime</textcolor>
				<label>$INFO[Player.FinishTime]</label>
			</control>
		</control>

		<control type="group">

			<visible>![Window.IsVisible(sliderdialog) | Window.IsVisible(videobookmarks)]</visible>

			<include>Animation_SlideUpFadeOut</include>

			<include>OSD_Progress_Bar</include>
			<include>OSD_Player_Details</include>

			<control type="label">
				<posx>30</posx>
				<posy>640</posy>
				<width>150</width>
				<height>40</height>
				<aligny>center</aligny>
				<font>Font_OSDProgress</font>
				<textcolor>OSDProgress</textcolor>
				<label>$INFO[Player.Time]</label>
				<textcolor>OSDPlayingDuration</textcolor>
			</control>

			<control type="label">
				<posx>1250</posx>
				<posy>640</posy>
				<width>150</width>
				<height>40</height>
				<aligny>center</aligny>
				<align>right</align>
				<font>Font_OSDProgress</font>
				<textcolor>OSDProgress</textcolor>
				<label>$INFO[Player.Duration]</label>
				<textcolor>OSDPlayingDuration</textcolor>
			</control>

			<control type="grouplist" id="2001">
				<posx>20</posx>
				<posy>668</posy>
				<width>400</width>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<onleft>800</onleft>
				<onright>9</onright>
				<onup>411</onup>
				<ondown>411</ondown>
				<control type="button" id="11">
					<description>Playlists</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_playlist_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_playlist_nf.png</texturenofocus>
					<onclick>ActivateWindow(videoplaylist)</onclick>
				</control>
				<control type="button" id="12">
					<description>Bookmarks</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_book_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_book_nf.png</texturenofocus>
					<onclick>ActivateWindow(videobookmarks)</onclick>
				</control>
				<control type="button" id="14">
					<description>OSD Subtitles</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_sub_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_sub_nf.png</texturenofocus>
					<onclick>Close</onclick>
					<onclick>XBMC.RunScript(script.xbmc.subtitles)</onclick>
				</control>
				<control type="button" id="7">
					<description>DVD MENU</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_dvd_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_dvd_nf.png</texturenofocus>
					<onclick>PlayerControl(ShowVideoMenu)</onclick>
					<visible>VideoPlayer.HasMenu</visible>
				</control>
			</control>

			<control type="grouplist" id="2002">
				<posx>460</posx>
				<posy>660</posy>
				<width>400</width>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<onleft>7</onleft>
				<onright>15</onright>
				<onup>411</onup>
				<ondown>411</ondown>
				<control type="button" id="9">
					<description>Previous</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_prev_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_prev_nf.png</texturenofocus>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<control type="button" id="3">
					<description>Rewind</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_rew_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_rew_nf.png</texturenofocus>
					<onclick>PlayerControl(rewind)</onclick>
				</control>
				<control type="button" id="5">
					<description>Stop</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_stop_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_stop_nf.png</texturenofocus>
					<onclick>PlayerControl(stop)</onclick>
				</control>
				<control type="togglebutton" id="4">
					<description>Play</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_pause_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_pause_nf.png</texturenofocus>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<alttexturefocus>osd/osd_button_play_fo.png</alttexturefocus>
					<alttexturenofocus>osd/osd_button_play_nf.png</alttexturenofocus>
					<disabledcolor>-</disabledcolor>
					<colordiffuse>-</colordiffuse>
					<onclick>PlayerControl(play)</onclick>
				</control>
				<control type="button" id="6">
					<description>Forward</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_ff_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_ff_nf.png</texturenofocus>
					<onclick>PlayerControl(forward)</onclick>
				</control>
				<control type="button" id="10">
					<description>Next</description>
					<height>68</height>
					<width>68</width>
					<texturefocus>osd/osd_button_next_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_next_nf.png</texturenofocus>
					<onclick>PlayerControl(Next)</onclick>
				</control>
			</control>

			<control type="grouplist" id="2003">
				<posx>1126</posx>
				<posy>668</posy>
				<width>400</width>
				<itemgap>-10</itemgap>
				<orientation>horizontal</orientation>
				<onleft>10</onleft>
				<onright>11</onright>
				<onup>411</onup>
				<ondown>411</ondown>
				<animation effect="slide" end="42,0" condition="!Player.CanRecord">Conditional</animation>
				<control type="button" id="15">
					<description>Record</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_record_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_record_nf.png</texturenofocus>
					<onclick>XBMC.PlayerControl(record)</onclick>
					<visible>Player.CanRecord</visible>
				</control>
				<control type="button" id="13">
					<description>Video Settings</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_settings_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_settings_nf.png</texturenofocus>
					<onclick>ActivateWindow(osdvideosettings)</onclick>
				</control>
				<control type="button" id="800">
					<description>audio Settings</description>
					<height>52</height>
					<width>52</width>
					<texturefocus>osd/osd_button_audio_fo.png</texturefocus>
					<texturenofocus>osd/osd_button_audio_nf.png</texturenofocus>
					<texturenofocus>osd/osd_button_audio_nf.png</texturenofocus>
					<onclick>ActivateWindow(osdaudiosettings)</onclick>
				</control>
			</control>
		</control>

		<include condition="Skin.HasSetting(DebugGrid)">Object_DebugGrid</include>
		<include condition="Skin.HasSetting(DebugMode)">Debug</include>

	</controls>
</window>
